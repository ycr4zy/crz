{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2022",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": [
      "@types/node",
      "@citizenfx/client"
    ],
    "paths": {
      "@shared/*": [
        "../shared/*"
      ],
    }
  },
  "exclude": [
    "node_modules"
  ]
}